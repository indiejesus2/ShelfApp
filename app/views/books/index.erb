<h1><%= current_user.username %>'s Bookshelf</h1>

<p><%= @books.length %></p>


<% @books.each do |book| %>

<form action="/books/<%= book.id %>" method="post">
<input type="hidden" name="_method" value="PATCH">

<ol>
    <li>Title: <%= book.title %></li>
    <li>Author: <%= book.author %></li>
    <li>Genre: <%= book.genre %></li>
    <li>Pages Read: <input type="number" name="book.pages_read" id="<%= book.pages_read %>" value="<%= book.pages_read %>"></li>
    <li>Read: <% if !book.read %> Still reading <input type="checkbox" name="book[read]" id="<%= book.read %>" value="<%= 'checked' ? 1 : 0 %>"> Completed! <% else %> Completed! </li>
    <% end %>
</ol>


<input type="submit" value="Update">
</form>


<form action="/books/<%= book.id %>" method="post">
<input type="hidden" name="_method" value="DELETE">
<input type="submit" value="delete">
</form>
<br>

<% end %>